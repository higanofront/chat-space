.main
  .main__header
    .main__header__post-name
      .main__header__post-member
        = @group.name
      .main__header__post-member-name
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "edit" do
      .main__header__Edit
        Edit
  .main__contents
    = render @messages
  .main__footer
    = form_for [@group, @message] do |f|
      .main__footer__post-form
        = f.text_field :content, class: 'main__footer__post-text', placeholder: 'type a message'
        .main__footer__post-image
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'selectmark'
        = f.submit 'Send', class: 'main__footer__send'
